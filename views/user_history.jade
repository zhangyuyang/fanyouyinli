          h5#specialty1.preview_studed(style='margin-top : 35px;') 大学asdasd
          h5#remember1.preview_studed(style='margin-top : 43px; margin-bottom : 20px') 大学asdasd
          a#modify_bottom1.modify_bottom(href='#')
          a#delete_bottom1.delete_bottom(href='#')

      form#studed(method='post',action='/save_studed')
        .studed_left
          span(style='position : absolute; color : red; top : 140px') *
          span 学校类型:
          span 学校名称:
          span(style='margin-left : 10px; margin-top : 32px') 院系:
          span(style='margin-left : 10px; margin-top : 40px') 回忆:
        .studed_right
          select#school_type(name='school_type') 
            option(value='大学') 大学
            option(value='中学') 中学
