      form#worked(method='post',action='/save_worked')
        .worked_left
          span(style='position : absolute; color : red; top : 3px') *
          span 单位名称:
          span 工作时间:
          span 部门/职位:
          span(style='margin-top : 40px') 多说几句:
        .worked_right
          input#company_name.company_name(name='company_name',type='text',value='请输入完整的公司名称')
          select#work_year_s
            option(value='null') 请选择
            - for (var x = 0; x < 30; x++)
              option(value='#{2014 - x}') #{2014 - x}
          span(style='position : absolute; top : 50px; left : 82px') 年
          select#work_year_e
            option(value='null') 请选择
            - for (var x = 0; x < 30; x++)
              option(value='#{2014 - x}') #{2014 - x}
          span(style='position : absolute; top : 50px; left : 175px') 年
          input#job.job(name='job' ,type='text',value='请输入你所在部门和职位')
          textarea#say_some.say_some(name='say_some')
          a#word_sub.user_history_button(href='#',type='hide')

    .studed
      //- 克隆的FORM
      form#studed_clone.studed_clone(method='post',action='/save_studed')
        .studed_left
          span(style='position : absolute; color : red; top : 140px') *
          span 学校类型:
          span 学校名称:
          span(style='margin-left : 10px; margin-top : 32px') 院系:
